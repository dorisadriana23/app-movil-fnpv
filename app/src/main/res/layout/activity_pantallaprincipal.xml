<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondodecardio"
    android:orientation="vertical">


    <TextView
        android:id="@+id/inf_text"
        android:layout_width="433dp"
        android:layout_height="58dp"
        android:textColor="@color/teal_700"
        android:text="Fundacion Nacer Para vivir"
        android:layout_gravity="center"
        android:gravity="center"/>
    <TextView
        android:id="@+id/senaads"
        android:layout_width="416dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Hoy quiero agradecer la oportunidad que me brinda esta Fundación por hacerme parte de su equipo de trabajo. Este apoyo y confianza ha sido de gran valor  para mí. Espero aportar valor a sus proyectos y metas, para seguir  siendo una gran organización.Gracias a esta empresa por su apoyo y formación como trabajador. Por haberme ofrecido las herramientas para lograr objetivos concretos y llenarme de satisfacciones por las metas logradas."/>
    <ImageView
        android:id="@+id/loginImageView"
        android:layout_width="149dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/fnpv"
        android:transitionName="logoImageTrans" />



    <TextView
        android:id="@+id/inf_tex"
        android:layout_width="433dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/teal_700"
        android:text="SENA-REGIONAL CAUCA CTPI" />

    <TextView
        android:id="@+id/senaadsi"
        android:layout_width="416dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Como un testimonio de gratitud y eterno reconocimiento, por el apoyo que siempre me han brindado y con el cual he logrado terminar mi carrera profesional, siendo para mí, la mejor de las herencias. Con admiración y respeto." />

    <ImageView
        android:id="@+id/loginImageViewsena"
        android:layout_width="142dp"
        android:layout_height="176dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/mij"
        android:transitionName="logoImageTrans"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="437dp"
        android:layout_height="53dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="143dp"
        android:gravity="center"
        android:text="Bienvenido"
        android:textColor="@color/black"
        card_view:backgroundTint="#009688" />
</LinearLayout>

